---
import Layout from '../layouts/Layout.astro';
import Logo from '../components/Logo.astro';
import Projects from './Projects.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { discLogo, botLogo, descDiscord, mapLogo, hackLogo, descMap, procLogo, proc2Logo, descProc } from '../data/data.js';
---

<Layout title="DidacDV Portfolio - Informatic Engineer">
	<div id = "genDiv">
		<section id = "generalinfo">
			<h1>Hey, i'm DÃ­dac!</h1>
			<h3>Informatic Engineering student at UPC, FIB currently at second year.
				Aiming to specialize myself into <span>software development.</span>
				<br>
				Currently avalaible for a job in the <span>tech field</span>.
				I would love to expand my skills and knowledge through
				some experience.
				</br>
				I live in <span>Barcelona, Catalonia</span>.
				<div>
				</div>
			</h3>
		</section>

		<section id="contactme">
			<h1>How to contact me</h1>
			<div id = "logoContainer">
				<h3>Here are some ways to contact me</h3>
				<Logo/>
			</div>
		</section>

		<section id = "projects">
			<h1>Projects</h1>
			<div id = "projectContainer">
				<ProjectCard name='DiscordBot', desc={descDiscord}, image= {discLogo}, image2={botLogo}, roundImage2 = {true}>
				</ProjectCard>
				<ProjectCard name = 'InteractiveMap', desc = {descMap}, image = {mapLogo}, image2 = {hackLogo}, roundImage2 = {false}>
				</ProjectCard>
				<ProjectCard name='Multiprocessor architecture simulation', desc = {descProc}, image= {procLogo}, image2 = {proc2Logo}, roundImage2 = {false}>
				</ProjectCard>
			</div>
			<p>All of them can be found at my github linked above.</p>
		</section>
	</div>
</Layout>


<style>
	html {
		color: white;
		margin-left: auto;
		margin-right: auto;
	}
	h1 {
		font-size: xx-large;
		margin-bottom: 0;
	}

	section {
		margin-bottom: 3%;
	}

	#genDiv {
		display: flex;
		flex-direction: column;
		width: max-content;
		margin-top: 0;
		margin-left: 20%;
		margin-right: 20%;
	}

	#generalinfo {
		display: flex;
		flex-direction: column;
		margin-left: auto;
		margin-right: auto;
		width: auto;
	}

	#generalinfo h3 {
		font-size: 19px;
		width: max-content;
		margin-top: 2%;
		font-weight:400;
	}

	#generalinfo h3 span {
		color:lightblue;
	}

	#generalinfo div {
		margin-top: 0px;
		align-self: center;
		display: flex;
		justify-content: center;
	}

	#contactme {
		display: flex;
		flex-direction: column;
	}

	#contactme h3 {
		font-size: 19px;
		width: max-content;
		margin-top: 2%;
		font-weight: 400;
		align-self: flex-start;
		text-wrap: wrap;

	}
	
	#logoContainer {
		display: flex;
		flex-direction: column;
	}

	#projects p {
		font-size: 17px;
	}

	#projectContainer {
		display: flex;
		flex-direction: column;
		gap: 40px;
	}

</style>